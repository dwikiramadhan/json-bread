<%- include('../partials/head'); %>
<body>
    <div class="container" style="margin-top: 30px;">
        <h1>Add Data</h1>
        <form>
            <div class="form-group row">
                <label for="inputString" class="col-sm-2 col-form-label">String</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputString" placeholder="String">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputInteger" class="col-sm-2 col-form-label">Integer</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputInteger" placeholder="Integer">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputFloat" class="col-sm-2 col-form-label">Float</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputFloat" placeholder="Float">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputDate" placeholder="End date">
                </div>
            </div>
            <div class="form-group row">
                <label for="selectBoolean" class="col-sm-2 col-form-label">Boolean</label>
                <div class="col-sm-8">
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>Choose the boolean ...</option>
                        <option>True</option>
                        <option>False</option>
                    </select>
                </div>
              </div>
        </form>
        <a href="/add" class="btn btn-primary">Save</a>
    </div>
</body>
<%- include('../partials/footer'); %>